@using DemoASPNET.Models.Product
@model ProductViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="card">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <h5 class="card-title">Name: @Model.Name</h5>
        <p class="card-text">Price: @Model.Price</p>
    </div>
</div>